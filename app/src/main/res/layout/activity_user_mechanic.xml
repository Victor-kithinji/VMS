<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.register.UserMechanicActivity">

    <Button
        android:id="@+id/userButton"
        android:layout_width="198dp"
        android:layout_height="65dp"
        android:layout_marginTop="236dp"
        android:text="USER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mechanicButton"
        android:layout_width="188dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:text="MECHANIC"
        app:layout_constraintEnd_toEndOf="@+id/userButton"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/userButton"
        app:layout_constraintTop_toBottomOf="@+id/userButton" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="356dp"
        android:layout_height="96dp"
        android:layout_marginTop="100dp"
        android:text="Welcome To VMS app. Click To Login as a Mechanic or User"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>