<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageSparePart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        android:contentDescription="@string/clutch5" />

    <TextView
        android:id="@+id/sparePartName"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/clutch5"
        app:layout_constraintEnd_toEndOf="@+id/imageSparePart"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageSparePart"
        app:layout_constraintTop_toBottomOf="@+id/imageSparePart" />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:text="@string/h200"
        app:layout_constraintEnd_toEndOf="@+id/sparePartName"
        app:layout_constraintStart_toStartOf="@+id/sparePartName"
        app:layout_constraintTop_toBottomOf="@+id/sparePartName" />
</androidx.constraintlayout.widget.ConstraintLayout>